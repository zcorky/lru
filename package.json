{
  "name": "@zcorky/lru",
  "version": "1.0.2",
  "description": "A tiny and fast Leat Recently Used(LRU) cache, written by typescript",
  "main": "lib/index.js",
  "repository": "https://github.com/zcorky/lru",
  "homepage": "https://github.com/zcorky/lru",
  "bugs": {
    "url": "https://github.com/zcorky/lru/issues"
  },
  "keywords": [
    "zcorky",
    "lru",
    "cache",
    "memoryCache",
    "redis",
    "ylru",
    "flru",
    "typescript"
  ],
  "author": "Zero",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf -rf lib",
    "test": "jest",
    "coverage": "jest && codecov",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "@types/node": "^10.9.4",
    "@zcorky/delay": "^1.0.1",
    "chai": "^4.1.2",
    "codecov": "^3.1.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-jsdoc-rules": "^0.1.2",
    "typescript": "^2.8.3"
  },
  "files": [
    "lib/index.js",
    "lib/index.d.ts"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "jest": {
    "roots": [
      "test"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "test/.*\\.spec\\.(ts|tsx)$",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 90,
        "statements": -10
      }
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
